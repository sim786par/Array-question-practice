#include<bits\stdc++.h>
using namespace std;

class Array{
    public:
    int *arr;          //pointer to dynamic array
    int size;          //total capacity of array
    int length;        //total element present in the array
    //constructor
    Array(int s){     
        size = s;
        length = 0;
        arr = new int[size];          //memory allocated
    }
    //for printing the elements of array
    void display(){                          
        for(int i=0;i<length;i++){
            cout << arr[i] <<"  ";
        }
        cout<<endl;
    }
    //for adding/appending elements at the end of the array
    void append(int x){
        if(length<size){                       //no of elements present in the array should not be greater than the size
            arr[length] = x;
            length++;
        }
        else{
            cout<< "can't append length is greater"<<endl;
        }  
    }
    //for inserting elemnet at any position 
    void insert(int pos,int x){
        if(pos>0 && pos<=length){                      //the position of the element should be >0 and <=length
            for(int i=length;i>pos;i--){                      //shifting one element from the end/right
                arr[i] = arr[i-1];
            }
            arr[pos] = x;
            length++;
        }
    }
    //destructor
    ~Array(){
        delete[] arr;
    }
    
};
//main function
int main(){
    Array a(10);
    a.append(10);
    a.append(22);
    a.append(87);
    a.display();
    a.insert(1,43);
    a.insert(1,49);
    a.display();
    return 0;
}
